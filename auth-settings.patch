+async def require_api_key(
+    x_api_key: str | None = Header(default=None, alias="x-api-key"),
+) -> None:
+    """
+    API key guard:
+      - auth_enabled is derived from settings (presence of API key)
+      - if disabled, short-circuit
+      - if enabled but key missing, 500 (misconfig)
+      - if wrong key, 401
+    """
+    settings = get_settings()
+
+    if not settings.auth_enabled:
+        return
+
+    expected = settings.api_key or os.getenv("FROSTGATE_API_KEY") or os.getenv("FG_API_KEY")
+    if not expected:
+        raise HTTPException(status_code=500, detail="API key not configured")
+
+    if x_api_key != expected:
+        raise HTTPException(status_code=401, detail="Invalid API key")
